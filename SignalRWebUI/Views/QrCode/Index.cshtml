
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="container">
        <div class="row justify-content-center">
            <!-- QR Kod Oluşturma -->
            <div class="col-md-6 mb-4">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h4 class="mb-0">QR Kod Oluştur</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Index" class="text-center">
                            <div class="form-group">
                                <input type="text" name="value" class="form-control mb-3" placeholder="QR kod içeriğini girin" required />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-qrcode"></i> QR Kod Oluştur
                            </button>
                        </form>
                        @if (ViewBag.QrCodeImage != null)
                        {
                            <div class="text-center mt-4">
                                <div class="border p-3 rounded bg-light">
                                    <img src="@ViewBag.QrCodeImage" alt="QR Code" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- QR Kod Okuma -->
            <div class="col-md-6 mb-4">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header text-center bg-success text-white">
                        <h4 class="mb-0">QR Kod Oku</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="DecodeQrCode" enctype="multipart/form-data" class="text-center">
                            <div class="form-group">
                                <label class="btn btn-outline-success w-100 mb-3">
                                    <i class="fas fa-upload"></i> QR Kod Resmi Seç
                                    <input type="file" name="qrImage" accept="image/*" class="d-none" onchange="previewImage(this)" required />
                                </label>
                                <div id="imagePreview" class="mb-3"></div>
                            </div>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-search"></i> QR Kodu Çöz
                            </button>
                        </form>

                        @if (ViewBag.DecodedText != null)
                        {
                            <div class="alert alert-success mt-4" role="alert">
                                <h5 class="alert-heading">QR Kod İçeriği:</h5>
                                <hr>
                                <p class="mb-0"><strong>@ViewBag.DecodedText</strong></p>
                            </div>
                            @if (ViewBag.UploadedImage != null)
                            {
                                <div class="text-center mt-3">
                                    <div class="border p-3 rounded bg-light">
                                        <img src="@ViewBag.UploadedImage" alt="Uploaded QR Code" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
                                    </div>
                                </div>
                            }
                        }

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger mt-4" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        preview.innerHTML = '';

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.innerHTML = `
                    <div class="border p-2 rounded bg-light">
                        <img src="${e.target.result}" class="img-fluid rounded" style="max-height: 200px;" />
                    </div>
                `;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>




